from yolobit import *
import sys
import uselect
from rover import *

def read_terminal_input():
  spoll=uselect.poll()        # Set up an input polling object.
  spoll.register(sys.stdin, uselect.POLLIN)    # Register polling object.

  input = ''
  if spoll.poll(0):
    input = sys.stdin.read(1)

    while spoll.poll(0):
      input = input + sys.stdin.read(1)

  spoll.unregister(sys.stdin)
  return input

if True:
  display.scroll('AI')

while True:
  robot = read_terminal_input()
  if robot == 'a':
    rover.forward(70, 1)
  if robot == 'b':
    rover.backward(70, 1)
  if robot == 'c':
    rover.turn_left(70, 1)
  if robot == 'd':
    rover.turn_right(70, 1)
